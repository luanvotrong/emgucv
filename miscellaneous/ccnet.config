        <publishDir>\\storage\canming\web\mediawiki\phase3\files\2.2.1\release</publishDir>
        <useLabelSubDirectory>false</useLabelSubDirectory>
        <alwaysPublish>false</alwaysPublish>
      </buildpublisher>
